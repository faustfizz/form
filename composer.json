{
    "name": "palmtree/form",
    "description": "Form component for Palmtree PHP",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Andy Palmer",
            "email": "andy@andypalmer.me",
            "homepage": "https://andypalmer.me"
        }
    ],
    "autoload": {
        "psr-4": {
            "Palmtree\\Form\\": "src"
        }
    },
    "require": {
        "php": ">=7.1",
        "palmtree/argparser": "^2.1",
        "palmtree/nameconverter": "^2.0",
        "palmtree/html": "^3.0"
    },
    "require-dev": {
        "palmtree/php-cs-fixer-config": "^1.1",
        "vimeo/psalm": "^4.6"
    },
    "suggest": {
        "ext-curl": "For Google Recaptcha support",
        "ext-json": "For Google Recaptcha support",
        "ext-fileinfo": "For mime type upload validation"
    },
    "scripts": {
        "fix": "vendor/bin/php-cs-fixer fix",
        "psalm": "vendor/bin/psalm --config=psalm.xml --no-cache",
        "yarn": "docker run --rm -v $PWD:/app -w=/app -u $(id -u):$(id -g) node:12-alpine yarn"
    }
}
